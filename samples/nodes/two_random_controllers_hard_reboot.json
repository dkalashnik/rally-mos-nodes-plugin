{
    "ControllerDisaster.reboot_random_controllers": [
        {
            "args": {
                "force_reboot": true,
                "controllers_count": 2,
                "wait_between": 300,
                "boot_server": true,
                "flavor": {
                    "name": "m1.tiny"
                },
                "image": {
                    "name": "TestVM"
                },
                "force_delete": false
            },
            "runner": {
                "type": "serial",
                "times": 5
            },
            "context": {
                "ssh_cloud": {
                    "transport_driver": "nodes.transport.ssh_transport.SSHTransport",
                    "nodes": {{nodes}}
                }
            }
        }
    ]
}