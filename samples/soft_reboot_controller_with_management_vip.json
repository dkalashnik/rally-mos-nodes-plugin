{
    "ControllerDisaster.reboot_controller_with_primitive": [
        {
            "args": {
                "resource": "vip__management",
                "force_reboot": false
            },
            "runner": {
                "type": "serial",
                "times": 1
            },
            "context": {
                "ssh_cloud": {
                    "transport_driver": "nodes.transport.ssh_transport.SSHTransport",
                    "nodes": {{nodes}}
                }
            }
        }
    ]
}